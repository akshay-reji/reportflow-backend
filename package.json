{
  "name": "reportflow-backend",
  "version": "1.0.0",
  "description": "ReportFlow Backend - Multi-tenant B2B SaaS Analytics Reports",
  "main": "server.js",
  "engines": {
    "node": "18.x"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "migrate:up": "node scripts/migrations/up.js",
    "migrate:down": "node scripts/migrations/down.js",
    "seed": "node scripts/seed.js",
    "docker:build": "docker build -t reportflow-backend .",
    "docker:run": "docker run -p 3001:3001 reportflow-backend"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "axios": "^1.6.0",
    "axios-retry": "^3.9.0",
    "bcryptjs": "^2.4.3",
    "chrome-aws-lambda": "^10.1.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.11.2",
    "express-validator": "^7.0.1",
    "handlebars": "^4.7.7",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.3",
    "moment": "^2.29.4",
    "node-cron": "^3.0.3",
    "puppeteer-core": "^21.0.0",
    "resend": "^2.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.19.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.3.1",
    "eslint": "^8.53.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3"
  }
}
